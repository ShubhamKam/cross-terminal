<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/terminal_background</item>
        <item name="android:navigationBarColor">@color/terminal_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@color/terminal_background</item>
        
        <!-- Remove default ActionBar for custom implementation -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Full screen theme for terminal -->
    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- Terminal text style -->
    <style name="TerminalText">
        <item name="android:textColor">@color/terminal_text_primary</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <!-- Hardware panel text style -->
    <style name="HardwareText">
        <item name="android:textColor">@color/hardware_text</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">11sp</item>
    </style>
    
    <!-- Status bar text style -->
    <style name="StatusText">
        <item name="android:textColor">@color/status_text</item>
        <item name="android:textSize">10sp</item>
    </style>
    
</resources>